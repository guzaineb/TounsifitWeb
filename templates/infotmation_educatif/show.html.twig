{% extends 'back/base.html.twig' %}
{% block body %}
	<h1>Tous les informations éducatif</h1>

	<div class="col-sm-12 col-xl-10">
		<div class="bg-light rounded h-100 p-4">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>Description</th>
						<th>Auteur</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for information in informations %}
						<tr>
							<td>{{ information.idinformation }}</td>
							<td>{{ information.titre }}</td>
							<td>{{ information.contenu }}</td>
							<td>{{ information.auteur }}</td>
							<td>
								<a href="{{path('information_update',{'id':information.idinformation})}}" class="btn btn-square btn-warning m-2">
									<i class="bi bi-pencil-square"></i>
								</a>
								|
								<a href="{{path('information_delete',{'id':information.idinformation})}}" class="btn btn-sm btn-sm-square  btn-danger m-2">
									<i class="bi bi-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<a href="{{path('Information_Add')}}">Information_Add</a>


	<div class="container-fluid pt-4 px-4">
		<div class="bg-light rounded-top p-4">
			<div class="row">
				<div class="col-12 col-sm-6 text-center text-sm-start">
					&copy;
