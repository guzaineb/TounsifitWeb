	{% block javascript %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sélection de tous les boutons de like et dislike
            const likeButtons = document.querySelectorAll('.btn-like');
            const dislikeButtons = document.querySelectorAll('.btn-dislike');

            // Ajout d'un écouteur d'événement sur chaque bouton de like
            likeButtons.forEach(function(likeButton) {
                likeButton.addEventListener('click', function() {
                    sendReaction(likeButton);
                });
            });

            // Ajout d'un écouteur d'événement sur chaque bouton de dislike
            dislikeButtons.forEach(function(dislikeButton) {
                dislikeButton.addEventListener('click', function() {
                    sendReaction(dislikeButton);
                });
            });

            // Fonction pour envoyer la réaction (like ou dislike) au serveur
            function sendReaction(button) {
                const action = button.dataset.action;
                fetch(action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (button.classList.contains('btn-like')) {
                        // Mise à jour du nombre total de likes pour ce bouton
                        button.nextElementSibling.textContent = data.totalLikes;
                    } else {
                        // Mise à jour du nombre total de dislikes pour ce bouton
                        button.nextElementSibling.textContent = data.totalDislikes;
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        });
    </script>
