{% extends 'back/base.html.twig' %}

{% block title %}Repeated Symptomes Chart{% endblock %}

{% block body %}
<div class="container">
    <h1>Repeated Symptomes Chart</h1>
    <canvas id="repeatedSymptomeChart" width="800" height="400"></canvas>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<script>
    var ctx = document.getElementById('repeatedSymptomeChart').getContext('2d');

    var labels = {{ repeatedSymptome|keys|json_encode|raw }};
    var counts = {{ repeatedSymptome|json_encode|raw }};

    var repeatedSymptomeChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Repeated Symptomes Count',
                data: counts,
                backgroundColor: 'rgba(255, 99, 132, 0.6)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.1)'
                    },
                    ticks: {
                        stepSize: 1
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                title: {
                    display: true,
                    text: 'Repeated Symptomes Count',
                    font: {
                        size: 18
                    }
                }
            }
        }
    });
</script>
{% endblock %}
