{# Allergie/statistique.html.twig #}

{# Include the necessary JavaScript libraries if not already included #}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

{# Render the chart canvas element #}
<canvas id="myChart" width="400" height="400"></canvas>

{# Render the chart script to initialize it #}
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {{ chart|raw }});
</script>
